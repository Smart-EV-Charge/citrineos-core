# Dokploy Environment Variables template (core platform stack)
# Add these in Dokploy: Environment -> Variables

# Postgres
PG_DB=citrine
PG_USER=citrine
PG_PASSWORD=CHANGE_ME_STRONG_PASSWORD
CORE_DB_HOST=core-db

# RabbitMQ
RABBITMQ_USER=guest
RABBITMQ_PASS=CHANGE_ME_STRONG_PASSWORD
CORE_MQ_HOST=core-mq

# MinIO / S3
MINIO_USER=minioadmin
MINIO_PASS=CHANGE_ME_STRONG_PASSWORD
MINIO_BUCKET=citrineos-s3-bucket
CORE_MINIO_HOST=core-minio

# Redis (optional)
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD
CORE_REDIS_HOST=core-redis

# Hasura / Operator UI (optional)
HASURA_ADMIN_SECRET=CHANGE_ME_STRONG_SECRET
NEXTAUTH_SECRET=CHANGE_ME_STRONG_SECRET
