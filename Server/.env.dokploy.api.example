# Hasura app (Dockerfile mode in Dokploy)
# Dockerfile path: citrineos-core/Server/hasura.Dockerfile
# Required in Dockerfile mode:
HASURA_GRAPHQL_DATABASE_URL=postgres://${{environment.PG_USER}}:${{environment.PG_PASSWORD}}@${{environment.CORE_DB_HOST}}:5432/${{environment.PG_DB}}
HASURA_GRAPHQL_ADMIN_SECRET=${{environment.HASURA_ADMIN_SECRET}}

# Optional hardening flags
HASURA_GRAPHQL_ENABLE_CONSOLE=false
HASURA_GRAPHQL_DEV_MODE=false
HASURA_GRAPHQL_ENABLE_TELEMETRY=false

# Required for browser access from Operator UI domain(s)
# Comma-separated list of allowed origins for CORS preflight/requests.
HASURA_GRAPHQL_CORS_DOMAIN=https://ui.rangoru.com,http://localhost:3000,http://localhost:5173
